<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".frg_perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@drawable/fondo_blanco1"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:text="Mi Perfil"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/editarp">
        </ImageView>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Nombre:"
                        >
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Guadalupe Monserrath"
                        android:id="@+id/perfil_nombre"
                        >
                    </EditText>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/black"
                            android:text="Ap. Paterno:"
                            >
                        </TextView>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:textSize="15sp"
                            android:enabled="false"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Martínez"
                            android:id="@+id/perfil_paterno"
                            >
                        </EditText>
                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/black"
                            android:text="Ap. Materno:"
                            >
                        </TextView>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:enabled="false"
                            android:textColor="@color/black"
                            android:text="Barrera"
                            android:id="@+id/perfil_materno"
                            >
                        </EditText>
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Matricula:"
                        >
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="21011175"
                        android:id="@+id/perfil_matricula"
                        >
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Correo:"
                        >
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="21011175@itsoeh.edu.mx"
                        android:id="@+id/perfil_correo"
                        >
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Estado:"
                        >
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:enabled="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Hidalgo"
                        android:id="@+id/perfil_estado"
                        >
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Municipio:"
                        >
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:text="Progreso de O."
                        android:id="@+id/perfil_municipio"
                        >
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Colonia:"
                        >
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:text="Xochitlan"
                        android:id="@+id/perfil_colonia"
                        >
                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Genero:"
                        >
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Femenino"
                        android:enabled="false"
                        android:id="@+id/perfil_genero"
                        >
                    </EditText>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:text="Contraseña:"
                        >
                    </TextView>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="**********"
                        android:enabled="false"
                        android:id="@+id/perfil_contraseña"
                        >
                    </EditText>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@color/tertiary"
                    app:cardBackgroundColor="@color/white"
                    android:id="@+id/menu_btn_editar">
                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/fondo_boton_rectangular2">
                        <TextView
                            android:layout_width="255dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginStart="50dp"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Editar Datos">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/fondo_boton_circulo"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/editar">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/fondo_boton_rectangulo1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/perfil_btn_grupos"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/grupos">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/fifty">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/perfil_btn_perfil"
                    android:layout_margin="10dp"
                    android:src="@drawable/perfil">
                </ImageView>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/perfil_btn_inscripciones"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/inscripciones">
            </ImageView>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:id="@+id/perfil_btn_menu"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/menu">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>